        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Show Apps"
        android:onClick="showApps"
        android:layout_centerHorizontal="true"/>
      -->

    <TextView
        android:id="@+id/home_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text=" "/>

    <Button
        android:id="@+id/button_start_vandring"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_below="@id/home_text"
        android:text="Start MonumentVandring"
        android:onClick="startMonumentVandring"/>
    <Button
        android:id="@+id/button_start_map"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_start_vandring"
        android:text="Start MonumentVandring"
        android:onClick="startMap"/>
    <Button
        android:id="@+id/button_innlogging_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_map"
        android:layout_centerHorizontal="true"
        android:text="Log in Admin"
        android:onClick="startAdminLogin"
        />

    <fragment
        android:id="@+id/apps_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_innlogging_admin"
        android:layout_above="@+id/lock_screen_button"
        android:name="com.sondreweb.kiosk_mode_alpha.AppsFragment"/>

    <Button
        android:id="@+id/lock_screen_button"
        android:text="Lock Screen now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="lockScreenNow"/>

</RelativeLayout>
