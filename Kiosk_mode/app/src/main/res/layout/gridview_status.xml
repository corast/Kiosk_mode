<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/lightGreen">

    <!-- Perfekt bilde stÃ¸rrelse er 50x50 PNG 32 bit color -->

    <ImageButton
        android:id="@+id/grid_status_image_button"
        android:src="@drawable/common_google_signin_btn_icon_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/redWard"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/grid_status_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_status_image_button"
        android:layout_centerVertical="true"
        android:maxWidth="100dp"
        android:text="testing mass tekst"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>