<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pineApple">

    <TextView
        android:id="@+id/overlay_text_outside"
        android:padding="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_geofence_outside_view_text"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_large" />
    <TextView
        android:id="@+id/overlay_text_timer"
        android:layout_margin="10dp"
        android:layout_below="@id/overlay_text_outside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update intervall 20 seconds."
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_medium"/>

</RelativeLayout>